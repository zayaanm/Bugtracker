@model Bugtracker.ViewModels.AddTicketsViewModel

@{
    Layout = null;
}

    <form class="text-center border border-light p-5" asp-controller="Ticket" asp-action="AddTickets" asp-route-projectId="@Model.projectId" asp-route-userEmail="@Model.userEmail" method="post" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">

        <p class="h4 mb-4">Add Ticket</p>

        <label asp-for="TicketName">Name</label>
        <div class="form-group">
            <input class="form-control" placeholder="TicketName" asp-for="TicketName" required>
            <span asp-validation-for="TicketName" class="text-danger"></span>
        </div>

        <label asp-for="TicketDescription">Description</label>
        <div class="form-group">
            
            <textarea asp-for="TicketDescription" rows="3" style="min-width: 100%"></textarea>
        </div>

        <label asp-for="TicketPriority">Priority</label>
        <div class="form-group">
            <select class="form-control" asp-for="TicketPriority" asp-items="Model.Priority" required></select>
            <span asp-validation-for="TicketPriority" class="text-danger"></span>
        </div>

        <label asp-for="TicketStatus">Status</label>
        <div class="form-group">
            <select class="form-control" asp-for="TicketStatus" asp-items="Model.Status" required></select>
            <span asp-validation-for="TicketStatus" class="text-danger"></span>
        </div>

        <label asp-for="TicketType">Type</label>
        <div class="form-group">
            <select class="form-control" asp-for="TicketType" asp-items="Model.Type" required></select>
            <span asp-validation-for="TicketPriority" class="text-danger"></span>
        </div>

        <div style="height:30px"></div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button class="btn btn-primary text-center" type="submit">Submit</button>
        <button type="button" class="btn btn-secondary text-center" data-dismiss="modal">Close</button>
    </form>