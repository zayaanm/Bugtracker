@model Bugtracker.ViewModels.UserManagementViewModel

@{
    ViewData["Title"] = "User Management";
}


@section CSS{

    <!-- Custom fonts for this template-->
    <link href="~/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">

}


@section Meta{

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Manage project users">
    <meta name="author" content="Zayaan Momin">
    <title>Manage Users</title>
}

@section Scripts{

    
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.js"></script>

    <script type="text/javascript">function postForm() {
            document.logout.submit();
        }</script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>

    <script type="text/javascript">$(document).ready(function () {
            $('#dataTable').DataTable();
        });</script>

    <script src="~/js/Ajax.js" asp-append-version="true"></script>

}

<body id="page-top">

    <div class="modal" tabindex="-1" role="dialog" id="form-modal" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!--Sidebar-->
        @await Html.PartialAsync("ProjectPartials/PageWrapperPartial", Model.Project)



        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->

                @await Html.PartialAsync("ProjectPartials/TopBarPartial")

                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Project Users</h1>

                    </div>

                    <div id="view-all">

                        <button onclick="showInPopup('@Url.Action("AddUsers","ManageUsers", new { projectId = Model.Project.ProjectId}, Context.Request.Scheme)', 'Add User')" type="button" class="btn btn-primary">Add User</button>

                    </div>





                    <div style="height:20px"></div>


                    <div id="view-all">

                        @await Html.PartialAsync("UserTablePartial", Model.UserProjects)
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->

            @await Html.PartialAsync("ProjectPartials/FooterPartial")

            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>




</body>




